<?xml version="1.0" encoding="UTF-8" ?>

<configuration debug="false">
    <property name="shop_log_pattern"
              value="[%d{'MM-dd HH:mm:ss,SSS',GMT+8:00}] %-5p [%.10t][%X{CU}] %logger{36}[%L] - %m%n"/>
    <property name="LOG_CHARSET" value="${shop_log_charset}"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <charset>${shop_log_charset}</charset>
            <pattern>${shop_log_pattern}</pattern>
        </encoder>
    </appender>
    <appender name="COMMON"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${shop_log_root}/common.log</file>
        <append>true</append>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${shop_log_root}/common.%d{yyyy-MM-dd}.log
            </fileNamePattern>
        </rollingPolicy>
        <encoder>
            <charset>${shop_log_charset}</charset>
            <pattern>${shop_log_pattern}</pattern>
        </encoder>
    </appender>
    <appender name="ERROR"
              class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${shop_log_root}/error.log</file>
        <append>true</append>
        <rollingPolicy
                class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${shop_log_root}/error.%d{yyyy-MM-dd}.log
            </fileNamePattern>
        </rollingPolicy>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <charset>${shop_log_charset}</charset>
            <pattern>${shop_log_pattern}</pattern>
        </encoder>
    </appender>

    <root>
        <level value="${shop_log_level}"/>
        <appender-ref ref="COMMON"/>
        <appender-ref ref="ERROR"/>
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
